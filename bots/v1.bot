"""
rank a given turn
"""
def rank(board, turn):
    rank = 0
    # Winning is good
    if turn.is_winning_move:
        rank += 100000000
    # check out if the enemy can win where we are building, if so, dont build
    for tile in board.get_surrounding_tiles(turn.build.x, turn.build.y):
        if tile.team > 0 and tile.team != turn.worker.team:
            if turn.build.height == 2 and tile.height == 2:
                rank -= 100000
    return rank

def take_turn(board, turns):
    turn_choices = []
    best_rank = -999999999999
    for t in turns:
        r = rank(board, t)
        if r > best_rank:
            turn_choices = [t]
            best_rank = r
        if r == best_rank:
            turn_choices.append(t)
    return random.choice(turn_choices)